{
    "App": {
        "ServiceName": "__serviceName__",
        "DisplayName": "__serviceDisplayName__",
        "Description": "__serviceDescription__",
        "Jobs": [
            {
                "Name": "blueprint.test.job",
                "SchedulerInterval": "__testJobSchedulerInterval__",
                "Enabled": "__testJobEnabled__"
            }
        ]
    },
    "quartz": {
        "jobStore": {
            "misfireThreshold": "10000"
        },
        "threadPool": {
            "threadCount": 1
        }
    },
    "Serilog": {
        "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.EntityFrameworkCore": "Warning",
                "Topshelf": "Warning",
                "Quartz": "Debug",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate":
                        "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u5}] [thread:{ThreadId}] [{SourceContext}] {Message}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "C:/home/LogFiles/service/enigmatry-blueprint-scheduler.log",
                    "outputTemplate":
                        "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{AssemblyName}] [v{AssemblyVersion}] [{Level:u5}] [thread:{ThreadId}] [{SourceContext}] {Message}{NewLine}{Exception}",
                    "restrictedToMinimumLevel": "Information",
                    "rollingInterval": "Day",
                    "fileSizeLimitBytes": "5242880",
                    "rollOnFileSizeLimit": true,
                    "retainedFileCountLimit": 30
                }
            }
        ]
    }
}