{
  "UseDeveloperExceptionPage": false,
  "ConnectionStrings": {
    "BlueprintContext": "Server=.;Database=Blueprint-Core;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "App": {
    "ServiceBus": {
      "AzureServiceBusEnabled": false,
      "SubscriptionClientName": "Blueprint"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          // on Azure - preferred location is D:/home/LogFiles/api/enigmatry-blueprint-api-{Date}.log
          "pathFormat": "C:/LogFiles/enigmatry-blueprint-api-{Date}.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{AppVersion}] [{User}-{RequestId}-{Address}] [{Level}] [thread:{ThreadId}] [{SourceContext}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "ApplicationInsights": {
    "InstrumentationKey": "__applicationInsightsInstrumentationKey__"
  }
}