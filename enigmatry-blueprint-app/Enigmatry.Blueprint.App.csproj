<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <TypeScriptToolsVersion>2.8</TypeScriptToolsVersion>
    <TypeScriptCompileBlocked>true</TypeScriptCompileBlocked>
    <!-- SonarQube needs this -->
    <ProjectGuid>{17d4e243-a0e4-47c6-b973-eb34f633ff68}</ProjectGuid>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <CodeAnalysisRuleSet>Enigmatry.Blueprint.App.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <CodeAnalysisRuleSet>Enigmatry.Blueprint.App.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="dist\**" />
    <Compile Remove="e2e\**" />
    <Compile Remove="src\**" />
    <Content Remove="dist\**" />
    <Content Remove="e2e\**" />
    <Content Remove="src\**" />
    <EmbeddedResource Remove="dist\**" />
    <EmbeddedResource Remove="e2e\**" />
    <EmbeddedResource Remove="src\**" />
    <None Remove="dist\**" />
    <None Remove="e2e\**" />
    <None Remove="src\**" />
  </ItemGroup>

  <ItemGroup>
    <_CustomFiles Include="$(MSBuildProjectDirectory)/dist/**/*" />
    <DotnetPublishFiles Include="@(_CustomFiles)">
      <DestinationRelativePath>dist/%(RecursiveDir)%(Filename)%(Extension)</DestinationRelativePath>
    </DotnetPublishFiles>
  </ItemGroup>

  <ItemGroup>
    <Content Remove="tslint.json" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="protractor.conf.js" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="wwwroot\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.App" Version="2.1.6" />
  </ItemGroup>


  <Target Name="OverwriteParametersXml" AfterTargets="_CreateParameterFiles">
    <Copy SourceFiles="parameters.xml" DestinationFiles="$(_MSDeployParametersFilePath)" />
    <XmlPoke XmlInputPath="$(_MSDeployParametersFilePath)" Query="//parameterEntry[@kind='ProviderPath']/@match" Value="^$([System.Text.RegularExpressions.Regex]::Escape($(PublishIntermediateOutputPath)))$">
    </XmlPoke>
  </Target>
  
</Project>
